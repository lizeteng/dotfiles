# => Basic

execute_count() {
    count=0

    while ((count < $1)); do
        eval $2 && ((count = $count + 1))
    done
}

# => Git

git_tag_reset() {
    git tag -d $1
    git push origin :refs/tags/$1
    git tag $1
    git push origin $1
}

# => Docker

docker_images_delete_none() {
    docker rmi $(docker images -aq -f 'dangling=true')
}

docker_containers_delete_exited() {
    docker rm $(docker ps -aq -f 'status=exited')
}
